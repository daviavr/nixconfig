    backend: X11rb,
    mousekey: "Mod4",
    workspaces: [( output: "DP-3", y: 0, x: 0, height: 1440, width: 3440,),],
    tags: [
        "1",
        "2",
        "3",
        "4",
        "5",
        "6",
        "7",
        "8",
        "9",
    ],
    layouts: [
        "Dwindle",
        "Ultrawide",
        "Grid",
        "Monocle",
