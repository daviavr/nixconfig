        (name: "CenterMainFluid", flip: None, rotate: North, reserve: Reserve, columns: (flip: None, rotate: North, main: (count: 1, size: 0.5, flip: None, rotate: North, split: Vertical), stack: (flip: None, rotate: North, split: None), second_stack: (flip: None, rotate: North, split: Horizontal))),
        (name: "Ultrawide", flip: None, rotate: South, reserve: Reserve, columns: (flip: None, rotate: North, main: (count: 1, size: 0.75, flip: None, rotate: North, split: Vertical), stack: (flip: None, rotate: North, split: Horizontal), second_stack: (flip: None, rotate: North, split: Horizontal))),
    ],
    layout_mode: Tag,
    insert_behavior: Bottom,
    scratchpad: [
        (name: "Kitty", value: "kitty", x: 250, y: 420, height: 600, width: 2940),
    ],
    window_rules: [
    ( window_class: "Navigator", spawn_on_tag: 1,),
    ( window_class: "obsidian", spawn_on_tag: 3,),
    ( window_class: "vesktop", spawn_on_tag: 4,),
    ( window_class: "Spotify", spawn_on_tag: 4,),
    ( window_class: "discord", spawn_on_tag: 4,),
    ( window_class: "org.gnome.Nautilus", spawn_floating: true,),
    ( window_class: "pavucontrol", spawn_floating: true,),
    ],
    disable_current_tag_swap: false,
    disable_tile_drag: false,
    disable_window_snap: true,
    focus_behaviour: ClickTo,
    focus_new_windows: true,
    single_window_border: true,
    sloppy_mouse_follows_focus: false,
    create_follows_cursor: None,
    auto_derive_workspaces: true,
    disable_cursor_reposition_on_resize: true,
    keybind: [
        (command: Execute, value: "amixer sset Master 5%-", modifier: [], key: "XF86XK_AudioLowerVolume"),
        (command: Execute, value: "amixer sset Master 5%+", modifier: [], key: "XF86XK_AudioRaiseVolume"),
        (command: Execute, value: "playerctl previous", modifier: [], key: "XF86XK_AudioPrev"),
        (command: Execute, value: "playerctl next", modifier: [], key: "XF86XK_AudioNext"),
        (command: Execute, value: "playerctl play-pause", modifier: [], key: "XF86XK_AudioPlay"),
        (command: Execute, value: "$HOME/.config/leftwm/themes/current/scripts/launcher.sh", modifier: ["modkey"], key: "d"),
        (command: Execute, value: "$HOME/.config/leftwm/themes/current/scripts/powermenu.sh", modifier: ["modkey", "Shift"], key: "e"),
        (command: Execute, value: "loginctl kill-session $XDG_SESSION_ID", modifier: ["modkey", "Shift"], key: "x"),
        (command: Execute, value: "kitty", modifier: ["modkey"], key: "Return"),
        (command: CloseWindow, value: "", modifier: ["modkey"], key: "q"),
        (command: ToggleScratchPad, value: "Kitty", modifier: ["modkey"], key: "m"),
        (command: SoftReload, value: "", modifier: ["modkey", "Shift"], key: "r"),
        (command: HardReload, value: "", modifier: ["modkey", "Shift"], key: "b"),
